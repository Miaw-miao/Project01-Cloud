	<script>
		document.querySelector('.btn-delete').addEventListener('click', () => {
		  const blogId = '<%= blog.id %>';
		  if (confirm('Bạn có chắc muốn xóa blog này không?')) {
			fetch(`/blog/${blogId}`, {
			  method: 'DELETE'
			})
			.then(res => res.json())
			.then(data => {
			  alert(data.message || "Xóa thành công.");
			  window.location.href = '/blog-list';
			})
			.catch(err => {
			  alert("Xóa thất bại.");
			  console.error(err);
			});
		  }
		});
	</script>
	  