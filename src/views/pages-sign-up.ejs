<script>
	document.querySelector('.signup-page').addEventListener('submit', (e) => {
	  e.preventDefault(); // Ngừng hành động mặc định của form (không gửi trực tiếp)
  
	  // Lấy dữ liệu từ form
	  const username = document.querySelector('[name="username"]').value;
	  const password = document.querySelector('[name="password"]').value;
	  const confirmPassword = document.querySelector('[name="confirmPassword"]').value;
  
	  // Gửi yêu cầu tạo người dùng mới
	  fetch('/signup', {
		method: 'POST',
		headers: {
		  'Content-Type': 'application/json'
		},
		body: JSON.stringify({ username, password, confirmPassword })
	  })
	  .then(res => res.json())
	  .then(data => {
		if (data.message) {
		  alert(data.message || 'Tạo người dùng thành công!');
		  window.location.href = '/login';  // Chuyển hướng đến trang đăng nhập
		}
	  })
	  .catch(err => {
		alert('Tạo người dùng thất bại.');
		console.error(err);
	  });
	});
  </script>
  